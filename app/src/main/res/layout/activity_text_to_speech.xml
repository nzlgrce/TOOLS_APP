<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FAEBEF"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTexttoSpeechTitle"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="Text to Speech"
        android:textColor="#333D79"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="341dp"
        android:layout_height="229dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/input_text_border"
        android:gravity="top|start"
        android:hint="Type your text here..."
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <!-- Buttons Row: Speak and Stop/Clear -->

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:padding="12dp"
        android:text="Speak"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529" />

    <Button
        android:id="@+id/btnStopClear"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_marginTop="26dp"
        android:contentDescription="Stop speaking or clear text"
        android:padding="12dp"
        android:text="Stop/Clear"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529" />

    <ImageButton
        android:id="@+id/btnSelectFile"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:background="@android:color/transparent"
        android:contentDescription="Upload File"
        android:padding="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144"
        app:srcCompat="@android:drawable/ic_menu_upload" />


</androidx.constraintlayout.widget.ConstraintLayout>